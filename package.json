{
  "name": "build-hat",
  "version": "0.0.1",
  "description": "NodeJS bindings for the Raspberry Pi Build HAT",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "tdd": "jest --watchAll",
    "build": "tsc",
    "clean": "rm -rf ./built",
    "prettier": "prettier -w **/*.js **/*.ts",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AndyA/node-build-hat.git"
  },
  "keywords": [
    "Lego",
    "Raspberry",
    "Pi",
    "I/O"
  ],
  "author": "Andy Armstrong <andy@hexten.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AndyA/node-build-hat/issues"
  },
  "homepage": "https://github.com/AndyA/node-build-hat#readme",
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "consistent",
    "jsxSingleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "requirePragma": false,
    "insertPragma": false,
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/lodash": "^4.14.194",
    "@types/node": "^18.16.1",
    "@types/split2": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "serialport": "^10.5.0",
    "split2": "^4.2.0"
  }
}
